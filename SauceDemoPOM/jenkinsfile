pipeline {
    agent any

    environment {
        ALLURE_RESULTS = 'SauceDemoPOM/allure-results'
    }

    tools {
        maven 'maven'
        jdk 'JAVA_HOME'
    }

    stages {
        stage('Cloner dépôt') {
            steps {
                git 'https://github.com/mohamedmedini/SwagLab_Cucumber.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn -f SauceDemoPOM/pom.xml -Dtest=Runner clean verify'
            }
        }

        stage('Allure Report') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: 'JAVA_HOME', // Ensure JAVA_HOME is configured in Global Tool Config
                    results: [[path: "${env.ALLURE_RESULTS}"]],
                    reportBuildPolicy: 'ALWAYS'
                ])
            }
        }
    }

    post {
        always {
            junit 'SauceDemoPOM/target/surefire-reports/*.xml'
        }
    }
}
